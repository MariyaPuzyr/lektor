mixin pagination
  ul.article-list--pagination
    li
      a.page-link(href='#')
        +sprite('icon arrow-left', 'arrow-select')
    li
      a.page-link(href='#') 1
    li
      a.page-link.active(href='#') 2
    li
      a.page-link(href='#') 3
    li
      a.page-link(href='#')
        +sprite('icon arrow-right', 'arrow-select')