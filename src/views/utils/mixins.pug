    .product__item__info
      a(href='product.html').product__item__ico(style="background-image: url('img/product-2.png')")
      .product__popup
        a.product__title Sendero
        .product__price 96 188 грн
        .product__price.old-price 96 188 грн
        .availability в наличии
        a(href='#').add-cart В корзину
        a(href='#').buy Оформление заказа


