- const path = "./img/sprites/sprite.svg#";

mixin sprite(name, id)
  svg(class=name)
    use(xlink:href=path + id)

mixin lector-info
  .lector-info
    .lector-info__avatar
      img(src='./img/avatar.jpg' alt='')
    .lector-info__info
      a(href='#').lector-info__name Василий Фамимлмялектора
      a(href='#').lector-info__link Архив лектора


mixin trending-archive-list
  .col-lg-4.col-md-6.d-flex
    .trending-archive-list
      .coming-events-soon__img-info
        a(href='#').coming-events-soon__img-info--link
          img(src='./img/event-1.jpg').img-fluid
        a(href='#').archive-tag-link Архив
      .coming-events-soon__info
        +lector-info
        a(href='#').coming-events-soon__info--title Слоненок с мячиком. Мягкая игрушка связана спицами
        p Прошла 31 ноября 2019 года, 15:00
        .price-lections
          +sprite('icon', 'icon-access-documents2')
          | Бесплатно
        .row
          .col-md-6
            a(href='#').default-green Скачать видео
          .col-md-6
            a(href='#').default-blue Скачать архив


